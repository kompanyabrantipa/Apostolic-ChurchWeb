# MongoDB Database Configuration
MONGODB_URI=mongodb://localhost:27017/apostolic_church
MONGODB_USERNAME=
MONGODB_PASSWORD=

# JWT Configuration
JWT_SECRET=apostolic_church_jwt_secret_key_2024_very_secure_minimum_32_chars
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=development

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MongoDB-Specific Configuration
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# Performance Settings
ENABLE_GZIP=true
COMPRESSION_LEVEL=6
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=3600

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging Settings
ENABLE_ACCESS_LOG=true
LOG_LEVEL=info
LOG_FILE=./logs/app.log
