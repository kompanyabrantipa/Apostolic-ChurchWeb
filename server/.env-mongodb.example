# MongoDB Database Configuration
MONGODB_URI=mongodb://localhost:27017/apostolic_church
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Alternative MongoDB Atlas (Cloud) Configuration
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/apostolic_church

# JWT Configuration (same as PostgreSQL version)
JWT_SECRET=apostolic_church_jwt_secret_key_2024_very_secure_minimum_32_chars
JWT_EXPIRES_IN=24h

# Server Configuration (same as PostgreSQL version)
PORT=3001
NODE_ENV=development

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# File Upload Configuration (same as PostgreSQL version)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# CORS Configuration (same as PostgreSQL version)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500

# Rate Limiting (same as PostgreSQL version)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# MongoDB-Specific Configuration
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000
